<%= render "govuk_publishing_components/components/details", {
  title: "Using a lead image",
} do %>
  <%= lead_image_guidance %>
<% end %>

<%= render "govuk_publishing_components/components/summary_card", {
  id: "uploaded_#{image_usage.key}_image_card",
  title: image_usage.label&.titleize || image_usage.key.titleize,
  summary_card_actions: image.present? ? [
    {
      label: "Edit",
      href: edit_admin_edition_image_path(edition, image),
      destructive: false,
    },
    {
      label: "Delete",
      href: confirm_destroy_admin_edition_image_path(edition, image),
      destructive: true,
    },
  ] : [
    {
      label: "Add",
      href: new_admin_edition_image_path(edition_id: edition.id, usage: image_usage.key),
    },
  ],
  rows: [
    {
      key: "Image",
      value: thumbnail,
    },
    {
      key: "Caption",
      value: caption,
    },
  ],
} %>
