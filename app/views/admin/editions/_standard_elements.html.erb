<h1 class="title"><%= edition.title %></h1>
<% unless edition.summary.blank? %>
  <div class="summary">
    <%= edition.summary %>
  </div>
<% end %>

<div class="body">
  <%= render partial: 'shared/lead_image', locals: {image: edition.lead_image} %>
  <%= govspeak_edition_to_admin_html edition %>
</div>