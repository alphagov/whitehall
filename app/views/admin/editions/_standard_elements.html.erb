<% if edition.non_english_edition? %>
  <p class="govuk-body"><em>(This document is <%= edition.primary_language_name %>-only)</em></p>
<% end %>

<div dir="<%= "rtl" if edition.rtl? %>">
  <h2 class="app-view-editions-edition__document__title govuk-heading-l"><%= edition.title %></h2>

  <% unless edition.summary.blank? %>
    <div class="app-view-editions-edition__document__summary">
      <p class="govuk-body"><em><%= edition.summary %></em></p>
    </div>
  <% end %>

  <div class="app-view-editions-edition__document__body">
    <%= govspeak_edition_to_admin_html edition %>
  </div>
</div>
