<% cache_if edition.world_location_ids.empty?,  taggable_world_locations_cache_digest do %>
  <%= form.select :world_location_ids,
                  options_for_select(taggable_world_locations_container, edition.world_location_ids),
                  { include_blank: true },
                  multiple: true,
                  class: 'chzn-select form-control',
                  data: {
                      placeholder: "World locationsâ€¦",
                      module: 'track-select-click',
                      track_category: 'worldLocationSelection',
                      track_label: request.path
                  } %>
<% end %>
