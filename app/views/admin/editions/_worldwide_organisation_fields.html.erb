<%
  worldwide_organisation_mandatory ||= false
%>

<%= form.label :worldwide_organisation_ids, "Select the worldwide organisations associated with this #{edition.format_name.titleize.downcase}", mandatory: worldwide_organisation_mandatory %>

<%= form.select :worldwide_organisation_ids,
                options_from_collection_for_select(WorldwideOrganisation.with_translations.all, 'id', 'name', edition.worldwide_organisation_ids),
                { include_blank: true },
                multiple: true,
                class: 'chzn-select',
                data: { placeholder: "Worldwide organisations..."} %>
