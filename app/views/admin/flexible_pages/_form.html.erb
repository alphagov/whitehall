<%= form_for form_url_for_edition(edition), as: :edition, html: { class: edition_form_classes(edition), multipart: true }, data: { module: "EditionForm LocaleSwitcher", "rtl-locales": Locale.right_to_left.collect(&:to_param) } do |form| %>
  <div class="<%= "right-to-left" if edition.rtl? %>">
    <%= form.hidden_field :lock_version %>

    <div class="govuk-!-margin-bottom-6 js-locale-switcher-field">
      <%= render "govuk_publishing_components/components/character_count", {
        textarea: {
          label: {
            text: "Admin Title (required)",
            heading_size: "m",
          },
          name: "edition[title]",
          value: edition.title,
          error_items: errors_for(edition.errors, :title),
          right_to_left: form.object.translation_rtl?,
          right_to_left_help: false,
          rows: 1,
        },
        id: "edition_title",
        maxlength: MaxLengths::TITLE,
      } %>
    </div>

    <% if edition.document&.slug.present? %>
      <div class="app-view-edit-edition__page-address govuk-!-margin-bottom-6">
        <%= render "govuk_publishing_components/components/heading", {
          text: "Page address",
          heading_level: 3,
          font_size: "m",
          margin_bottom: 2,
        } %>

        <%= render "govuk_publishing_components/components/hint", {
          text: edition.public_url,
        } %>
      </div>
    <% end %>

    <%= render "govuk_publishing_components/components/heading", {
      text: "Content",
      font_size: "l",
      margin_bottom: 3,
    } %>

    <%= form.hidden_field :flexible_page_type, value: @edition.flexible_page_type %>
    <%= render("admin/flexible_pages/content_blocks/default_object", {
      schema: FlexiblePageType.find(@edition.flexible_page_type).schema,
      content: @edition.flexible_page_content,
      path: FlexiblePageContentBlocks::Path.new,
      root: true,
      primary_locale: true,
    }) %>

    <%= render "govuk_publishing_components/components/heading", {
      text: "Associations",
      font_size: "l",
      margin_bottom: 3,
    } %>

    <!-- TODO: we should order these based on the order they appear in the schema -->
    <!-- TODO: we need to pass 'required: true' as appropriate - but this only seems supported by World Locations and Worldwide Organisation fields -->

    <div class="govuk-!-margin-bottom-4">
      <% if @edition.can_be_associated_with_role_appointments? %>
        <div class="app-view-edit-edition__appointment-fields">
          <%= render "appointment_fields", form: form, edition: @edition %>
        </div>
      <% end %>

      <% if @edition.can_be_associated_with_topical_events? %>
        <%= render "topical_event_fields", form: form, edition: @edition %>
      <% end %>

      <% if @edition.can_be_associated_with_worldwide_organisations? %>
        <div class="app-view-edit-edition__world-organisation-fields govuk-!-margin-bottom-4">
          <%= render "worldwide_organisation_fields", form: form, edition: @edition, required: true, index: "3" %>
        </div>
      <% end %>

      <% if @edition.can_be_associated_with_world_locations? %>
        <%= render "world_location_fields", form: form, edition: @edition %>
      <% end %>

      <% if @edition.can_be_related_to_organisations? %>
        <div class="app-view-edit-edition__organisation-fields">
          <%= render "organisation_fields", form: form, edition: @edition %>
        </div>
      <% end %>
    </div>

    <%= render("settings_fields", form:, edition:) %>
    <%= standard_edition_publishing_controls(form, edition) %>
  </div>
<% end %>
