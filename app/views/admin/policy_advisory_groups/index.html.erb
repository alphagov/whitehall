<% page_title "Policy advisory groups" %>
<section>
  <nav class="actions">
    <%= link_to "Create group", new_admin_policy_advisory_group_path, class: "btn new_resource", title: "Create a policy team" %>
  </nav>

  <h1>Policy advisory groups</h1>

  <table class="policy_advisory_groups table table-striped">
    <thead>
      <tr>
        <th width="30%">Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @policy_advisory_groups.each do |policy_advisory_group| %>
        <%= content_tag_for(:tr, policy_advisory_group) do %>
          <td class="name"><%= link_to policy_advisory_group.name, edit_admin_policy_advisory_group_path(policy_advisory_group), title: "Edit policy advisory group #{policy_advisory_group.name}" %></td>
          <td class="email"><%= policy_advisory_group.email %></td>
          <td>
            <% if can?(:delete, PolicyAdvisoryGroup) %>
            <%= button_to 'Delete', admin_policy_advisory_group_path(policy_advisory_group), method: :delete, title: "Delete", confirm: "Are you sure you want to delete the policy advisory group?", class: "btn btn-danger" %>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
