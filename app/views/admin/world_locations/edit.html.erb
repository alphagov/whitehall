<% page_title "Edit " + @world_location.name %>

<div class="row">
  <section class="col-md-8">
    <h1>Edit world location</h1>
  <p class="warning">Warning: changes to worldwide locations appear instantly on the live site.</p>
    <%= form_for([:admin, @world_location]) do |form| %>
      <div class="form-group">
        <%= form.label :world_location_type_id, 'Type' %>
        <%= form.select :world_location_type_id, options_from_collection_for_select(WorldLocationType.all, :id, :name, form.object.world_location_type_id), {}, {class: 'form-control input-md-2'} %>
      </div>

      <%= form.text_field :title %>

      <%= form.text_area :mission_statement, rows: 20, class: "previewable" %>

      <%= form.check_box :active,
                label_text: "Active (can visitors click through from the world location list?)" %>

      <%= render 'admin/shared/featured_link_fields', form: form %>

      <p class="warning">Warning: changes to worldwide locations appear instantly on the live site.</p>
      <%= form.save_or_cancel cancel: admin_world_location_path(@world_location) %>
    <% end %>
  </section>
</div>
