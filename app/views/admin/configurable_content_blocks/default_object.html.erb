<% if block.root? %>
  <% block.field_blocks.each do |block| %>
    <%= render block %>
  <% end %>
<% else %>
  <%= render "govuk_publishing_components/components/fieldset",
             { legend_text: "#{block.title}#{block.required ? ' (required)' : ''}",
               heading_size: "m",
               id: block.path.form_control_id } do %>
    <% block.field_blocks.each do |block| %>
      <%= render block %>
    <% end %>
  <% end %>
<% end %>
