<% errors = errors || [] %>
<%= render "govuk_publishing_components/components/date_input", {
  id: path.form_control_id,
  label: path.form_control_name,
  legend_text: schema["title"],
  hint: "For example, 01 08 2015",
  items: [
    {
      label: "Day",
      name: path.multiparameter_form_control_name(3),
      width: 2,
      value: params.dig("edition", "block_content", *path.to_a, "3") || translated_content&.day || content&.day,
    },
    {
      label: "Month",
      name: path.multiparameter_form_control_name(2),
      width: 2,
      value: params.dig("edition", "block_content", *path.to_a, "2") || translated_content&.month || content&.month,
    },
    {
      label: "Year",
      name: path.multiparameter_form_control_name(1),
      width: 4,
      value: params.dig("edition", "block_content", *path.to_a, "1") || translated_content&.year || content&.year,
    },
  ],
  error_items: errors_for(errors, path.validation_error_attribute.to_sym),
} %>
