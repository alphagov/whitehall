<% translated_content = translated_content || nil %>
<% select_options = [
     {
       text: "No image selected",
       value: "",
     },
   ] + image_select.images.map do |image|
  {
    text: image.filename,
    value: image.image_data.id,
    selected: image.image_data.id == (translated_content || image_select.content).to_i,
  }
end %>

<%= render "govuk_publishing_components/components/select", {
  id: image_select.path.form_control_id,
  label: image_select.type_config.attribute_label(image_select.path.last) + (image_select.type_properties.attribute_required?(image_select.path.last) ? " (required)" : ""),
  name: image_select.path.form_control_name,
  options: select_options,
  hint: image_select.type_config.attribute_hint_text(image_select.path.last),
  heading_size: "m",
} %>
