<% page_title @socialable.name %>
<div class="row-fluid organisation-header">
  <div class="span8">
    <h1><%= @socialable.name %></h1>
    <%= link_to "View on website", @socialable %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12 organisation-details">
    <section>
      <%= tab_navigation_for(@socialable) %>
      <%= render(@social_media_accounts, { socialable: @socialable }) || content_tag(:p, 'No social media accounts') %>

      <div class="form-actions">
        <%= link_to "Add", new_polymorphic_path([:admin, @socialable, SocialMediaAccount]), class: "btn btn-large btn-primary"%>
      </div>
    </section>
  </div>
</div>
