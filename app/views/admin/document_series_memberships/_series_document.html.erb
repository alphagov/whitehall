<%= content_tag_for(:li, edition, class: "document-row") do %>
  <%= link_to edition.title, admin_edition_path(edition) %>
  <ul>
    <li><%= absolute_date(edition.public_timestamp) %></li>
    <li><%= edition.organisations.map { |o| organisation_display_name(o) }.to_sentence.html_safe %></li>
    <li><%= edition.display_type %></li>
  </ul>

    <%= link_to 'Remove', admin_document_series_document_path(document_series, edition.document.id),
        title: "Remove this document from the series",
        remote: true,
        method: :delete,
        class: 'btn btn-danger',
        style: 'float:right',
        confirm: 'Are you sure you want to remove this document from the series?' %>
<% end %>
