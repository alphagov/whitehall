<% page_title @organisation.name %>
<div class="row-fluid organisation-header">
  <div class="span8">
    <h1><%= @organisation.name %></h1>
    <%= link_to "View on website", organisation_path(@organisation) %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12 organisation-details">
    <section>
      <%= tab_navigation_for(@organisation) do %>
        <table class="table">
          <% @roles.each do |role| %>
            <tr>
              <th>
                <%= link_to role.name, [:edit, :admin, role.becomes(Role)] %>
              </th>
              <td>
                <%= role.current_people.map { |p| link_to(p.name, [:edit, :admin, p]) }.to_sentence.html_safe %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </section>
  </div>
</div>
