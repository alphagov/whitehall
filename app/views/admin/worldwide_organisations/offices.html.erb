<% page_title @worldwide_organisation.name %>
<div class="row-fluid organisation-header">
  <div class="span8">
    <h1><%= @worldwide_organisation.name %></h1>
    <%= link_to "View on website", url_for(@worldwide_organisation) %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12 organisation-details">
    <section>
      <%= tab_navigation_for(@worldwide_organisation) %>

      <%= link_to "Add worldwide office", new_admin_worldwide_organisation_worldwide_office_path(@worldwide_organisation), class: "btn new_resource"%>

      <% if @worldwide_organisation.offices.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Access and opening times</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%= render @worldwide_organisation.offices, worldwide_organisation: @worldwide_organisation %>
          </tbody>
        </table>
      <% else %>
        <p>No offices</p>
      <% end %>

    </section>
  </div>
</div>
