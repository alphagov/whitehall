<%= edition_editing_tabs(edition) do %>
  <%= standard_edition_form(edition) do |form| %>

    <%= render partial: 'inline_attachments_info', locals: { form: form, edition: edition } %>

    <fieldset>
      <legend>Associations</legend>
      <%= render partial: 'topic_fields', locals: { form: form, edition: edition } %>
      <%= render partial: 'world_location_fields', locals: { form: form, edition: edition, world_location_required: true } %>
      <%= render partial: 'worldwide_organisation_fields', locals: { form: form, edition: edition, worldwide_organisation_required: true } %>
      <%= render partial: 'worldwide_priority_fields', locals: { form: form, edition: edition } %>
    </fieldset>

    <%= render partial: 'first_published_at', locals: { form: form, edition: edition } %>
  <% end %>
<% end %>
