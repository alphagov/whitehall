<% page_title "Featured items on " + @world_location_news.name %>

<%= content_tag_for(:div, @world_location_news) do %>
  <div class="world-location-header">
    <h1>
      <span class="name"><%= @world_location_news.name %></span>
    </h1>
    <p><%= link_to "View on website", @world_location_news.public_url(cachebust_url_options, locale: params[:locale]) %></p>
  </div>
  <section class="world-location-details">
    <%= tab_navigation_for(@world_location_news) %>
    <%= render partial: 'admin/feature_lists/feature_list', locals: {feature_list: @feature_list, filter_by: [:title, :type, :world_location], maximum_featured_documents: @world_location_news.class::FEATURED_DOCUMENTS_DISPLAY_LIMIT} %>
  </section>
<% end %>
