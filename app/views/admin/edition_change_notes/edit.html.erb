<% content_for :page_title, "#{@edition.title}: Change notes" %>
<% content_for :context, @edition.title %>
<% content_for :title, "Change notes" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">Change published at: <%= I18n.l(@edition_to_change.major_change_published_at, format: :long_ordinal) %></p>
    <p class="govuk-body">Current change note: <%= @edition_to_change.change_note %></p>

    <%= form_for @edition_to_change, method: :patch, url: admin_edition_change_note_path(@edition_to_change) do |form| %>
      <%= render "govuk_publishing_components/components/textarea", {
        label: {
          text: "New change note:",
          bold: true,
        },
        name: "new_change_note",
        value: @edition_to_change.change_note,
      } %>

      <div class="govuk-button-group govuk-!-margin-bottom-6">
        <%= render "govuk_publishing_components/components/button", {
          text: "Save",
        } %>

        <%= link_to("Cancel", admin_edition_change_notes_path, class: "govuk-link govuk-link--no-visited-state") %>
      </div>
    <% end %>
  </div>
</div>
