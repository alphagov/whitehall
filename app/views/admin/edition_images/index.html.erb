<% content_for :context, "#{@edition.title}" %>
<% content_for :page_title, "Images for #{@edition.format_name}" %>
<% content_for :title, "Images for #{@edition.format_name}" %>
<% content_for :error_summary, render(Admin::ErrorSummaryComponent.new(object: @images.flat_map { |image| image&.errors&.errors }, parent_class: "edition_images")) if @images.present? %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "components/secondary_navigation", {
      aria_label: "Document navigation",
      items: secondary_navigation_tabs_items(@edition, request.path),
    } %>

    <h2 class="govuk-heading-l">Images</h2>
    
    <%= render "govuk_publishing_components/components/summary_card", {
      title: "Header image",
      rows: [
        {
          key: "Header image",
          value: raw("<img width='128' src='https://assets.integration.publishing.service.gov.uk/media/62c2dd0f8fa8f54e8e4fdec2/p1044390.jpg' />"),
          actions: [
            {
              label: "Update",
              href: "#1"
            },
            {
              label: "Remove",
              href: "#2",
              destructive: true
            }
          ]
        },
      ]
    } %>
  
    <%= render "govuk_publishing_components/components/summary_card", {
      title: "Logo event image",
      rows: [
        {
          key: "Logo event image",
          value: raw("<img width='128' src='https://assets.publishing.service.gov.uk/media/5bb49afa40f0b64a4e9c71d9/s300_SDG-image.jpg' />"),
          actions: [
            {
              label: "Update",
              href: "#1"
            },
            {
              label: "Remove",
              href: "#2",
              destructive: true
            }
          ]
        }
      ]
    } %>
  
    <%= render "govuk_publishing_components/components/summary_card", {
      title: "Embeddable images",
      summary_card_actions: [
        {
          label: "Add",
          href: "#1"
        },
      ],
      rows: [
        {
          key: "[Image:foo.png]",
          value: raw("<img width='128' src='https://assets.integration.publishing.service.gov.uk/media/678f9e213087686d77328ad8/s465_govuk-app-govuk.png' />"),
          actions: [
            {
              label: "Update",
              href: "#1"
            },
            {
              label: "Remove",
              href: "#2",
              destructive: true
            }
          ]
        },
        {
          key: "[Image:bar.png]",
          value: raw("<img width='128' src='https://assets.integration.publishing.service.gov.uk/media/68c9785b1eabc899da708438/s300_7jTOQbQw.png' />"),
          actions: [
            {
              label: "Update",
              href: "#1"
            },
            {
              label: "Remove",
              href: "#2",
              destructive: true
            }
          ]
        }
      ]
    } %>

    <%# render "image_upload", edition: @edition %>
    <%# render Admin::EditionImages::UploadedImagesComponent.new(edition: @edition) %>
  </div>
</div>
