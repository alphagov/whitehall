<% page_title "Add attachment to: #{attachment.attachable_model_name}" %>
<div class="span8">
  <section>
    <h1>Add attachment to <%= attachment.attachable_model_name %></h1>

    <%= render 'form', attachable: @attachable %>
  </section>
</div>

<% if attachment.html? %>
  <div class="span4">
    <%= sidebar_tabs govspeak_help: "Formatting help" do |tabs| %>
      <%= tabs.pane id: "govspeak_help" do %>
        <%= render "admin/editions/govspeak_help", hide_inline_attachments_help: true, show_footnote_help: true %>
      <% end %>
    <% end %>
  </div>
<% end %>
