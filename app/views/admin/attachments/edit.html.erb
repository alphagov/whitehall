<% page_title "Editing #{attachment.attachable_model_name} attachment" %>

<div class="span8">
  <section>
    <h1>Editing <%= attachment.attachable_model_name %> attachment</h1>

    <%= render partial: 'form', locals: { attachable: @attachable, attachment: attachment } %>
  </section>
</div>

<% if attachment.html? %>
  <div class="span4">
    <%= sidebar_tabs govspeak_help: "Formatting help" do |tabs| %>
      <%= tabs.pane id: "govspeak_help" do %>
        <%= render "admin/editions/govspeak_help", hide_inline_attachments_help: true, show_footnote_help: true %>
      <% end %>
    <% end %>
  </div>
<% end %>
