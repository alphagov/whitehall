<%= form_for [:admin, accessible, access_and_opening_times],
    url: accessible.is_a?(WorldwideOrganisation) ?
          admin_worldwide_organisation_access_and_opening_time_path(accessible, access_and_opening_times) :
          admin_worldwide_organisation_worldwide_office_access_and_opening_time_path(accessible.worldwide_organisation, accessible, access_and_opening_times) do |form| %>
  <%= form.errors %>
  <%= form.text_area :body, label_text: "Body", "class" => "previewable" %>
  <%= form.save_or_cancel cancel: accessible_path(accessible) %>
<% end %>
