<% page_title @worldwide_organisation.name + " translations" %>
<section>
  <nav class="actions">
    <% if @missing_locales.any? %>
      <%= form_tag admin_worldwide_organisation_corporate_information_page_translations_path(@worldwide_organisation, @corporate_information_page) do %>
        <%= label_tag :translation_locale, 'Locale' %>
        <%= select_locale :translation_locale, @missing_locales %>
        <%= submit_tag "Create translation", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </nav>
</section>

<h1>Translations for <%= @worldwide_organisation.name %></h1>
<table id="worldwide-organisations-translations" class="table table-striped">
  <thead>
    <tr>
      <th>Locale</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @translated_locales.each do |locale| %>
      <tr>
        <td class="locale">
          <%= link_to locale.native_language_name, edit_admin_worldwide_organisation_corporate_information_page_translation_path(@worldwide_organisation, @corporate_information_page, locale.code) %> (<%= link_to "view", worldwide_organisation_corporate_information_page_path(@worldwide_organisation, @corporate_information_page, locale: locale) %>)
        </td>
        <td class="actions">
          <%= button_to 'Delete', admin_worldwide_organisation_corporate_information_page_translation_path(@worldwide_organisation, @corporate_information_page, locale.code), method: :delete, class: "btn btn-danger", confirm: "Are you sure you want to delete this translation?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
