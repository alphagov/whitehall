<% content_for :page_title, "Landing pages" %>
<% content_for :title, "Landing pages" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="app-view-dashboard-index__table govuk-!-margin-bottom-9 govuk-table--with-actions">
      <%= render "govuk_publishing_components/components/table", {
        head: [
          {
            text: "Base Path",
          },
          {
            text: "Updated",
          },
          {
            text: tag.span("Actions", class: "govuk-visually-hidden"),
          },
        ],
        rows: @landing_pages.map do |landing_page|
          [
            {
              text: tag.p(landing_page.base_path, class: "govuk-!-font-weight-bold govuk-!-margin-0"),
            },
            {
              text: sanitize(tag.p("Updated #{time_ago_in_words landing_page.updated_at} ago", class: "govuk-!-margin-bottom-0 govuk-!-margin-top-0")),
            },
            {
              text: link_to(sanitize("Edit"), edit_admin_landing_page_path(landing_page), class: "govuk-link"),
            },
          ]
        end,
      } %>
    </div>
  </div>
</div>

<%= link_to("New", new_admin_landing_page_path ) %>
