<% page_title @organisation.name %>
<div class="row-fluid organisation-header">
  <div class="span8">
    <h1><%= @organisation.name %></h1>
    <%= link_to "View on website", @organisation %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12 organisation-details">
    <section>
      <%= tab_navigation_for(@organisation) %>

      <p class="warning">Warning: changes to promotional features appear instantly on the live site.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Promotional Feature</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <%= render @promotional_features, organisation: @organisation %>
        </tbody>
      </table>

      <div class="form-actions">
        <%= link_to "New promotional feature", new_admin_organisation_promotional_feature_path, class: "btn btn-large btn-primary"%>
      </div>
    </section>
  </div>
</div>
