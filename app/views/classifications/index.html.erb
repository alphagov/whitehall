<% page_title "Topics" %>
<% page_class "topics-index index-list-page" %>


<div class="block-1">
  <div class="inner-block">
    <header class="page-header">
        <h1 class="title">Topics</h1>
        <h2 class="label">What&nbsp;is the&nbsp;government doing&nbsp;about&hellip;</h2>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <% if @topics.any? %>
      <div class="heading-block all-topics">
          <div class="content">
            <%= render partial: "list", locals: { topics: @topics } %>
          </div>
        <% else %>
          <p>We don't have any topics with published documents at present.</p>
      </div>
    <% end %>
    <% if @topical_events.any? %>
      <div class="heading-block all-topical_events">
          <h1 class="label">Topical events</h1>
          <div class="content">
            <%= render partial: "list", locals: { topics: @topical_events } %>
          </div>
      </div>
    <% end %>
  </div>
</div>
