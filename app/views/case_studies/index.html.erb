<% page_title "Case Studies" %>
<% page_class "case-studies-index" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header case-study icon">
      <h1 class="page_title">Case Studies</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <section id="case_studies" class="announcements group">
      <% if @case_studies.any? %>
        <ul>
          <% @case_studies.each do |case_study| %>
            <%= content_tag_for(:div, case_study) do %>
              <h2 class="title"><%= link_to case_study.title, public_document_path(case_study) %></h2>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </section>
  </div>
</div>
