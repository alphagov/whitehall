<% page_title @document.title, "Publications" %>

<div class="document-page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
      <%= render  partial: 'header',
                  locals: {
                    header_title: @document.publication_type.singular_name,
                    document: @document,
                    policies: @related_policies
                  } %>
    </div>
  </div>
  <div class="block-2">
    <div class="inner-block">
      <%= render partial: "documents/attachment_full_width",
                locals: { document: @document } %>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <section id="details" class="heading-block">
        <h1>Detail</h1>
        <div class="content">
          <article>
            <div class="body">
              <%= govspeak_edition_to_html @document %>
            </div>
          </article>
        </div>
      </section>
      <% if @related_statistical_data_sets.any? %>
        <section id="related_statistical_data" class="heading-block">
          <h1>Statistical data sets</h1>
          <div class="content">
            <table class="document-list statistical-data-sets">
              <thead class="visuallyhidden">
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Date</th>
                </tr>
              </thead>
              <tbody>
                <% @related_statistical_data_sets.each do |statistical_data_set| %>
                  <%= content_tag_for :tr, statistical_data_set, class: "document-row" do %>
                    <th scope="row" class="title attribute"><%= statistical_data_set.link %></th>
                    <td class="date attribute"><%= statistical_data_set.display_date_microformat %></td>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </section>
      <% end %>
    </div>
  </div>

</div>
