<% page_class "publications-show-page" %>
<% page_title edition_page_title(@document), t('publications.heading') %>

<%= content_tag_for :article, @document, nil, class: "document-page #{@document.type.downcase}" do %>
  <header class="block headings-block">
    <div class="inner-block floated-children">
      <%= render partial: 'header',
                 locals: {
                   header_title: @document.display_type,
                   document: @document,
                   footer_meta: true,
                   policies: @related_policies
                 } %>
    </div>
  </header>

  <div>
    <div class="inner-block">
      <%= render partial: "document_summary", locals: { document: @document } %>
    </div>
  </div>

  <section id="details" class="inner-block">
    <%= govspeak_edition_to_html @document %>
  </section>

  <div class="block-2 heading-block">
    <div class="inner-block">
      <%= render partial: "documents/publication_attachments",
                 locals: {
                  document: @document
                 } %>
    </div>
  </div>

  <div class="block-5">
    <div class="inner-block">
      <%= render partial: 'documents/document_footer_meta', locals: { document: @document, policies: @related_policies } %>
    </div>
  </div>
<% end %>
