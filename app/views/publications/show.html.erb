<% page_title @document.title, "Publications" %>
<%= analytics_for_organisations @document.organisations %>

<div class="document-page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
      <%= render  partial: 'header',
                  locals: {
                    header_title: @document.publication_type.singular_name,
                    document: @document,
                    policies: @related_policies
                  } %>
    </div>
  </div>
  <div class="block-2">
    <div class="inner-block">
      <%= render partial: "documents/attachment_full_width",
                locals: { document: @document } %>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <section id="details" class="heading-block">
        <h1>Detail</h1>
        <div class="content">
          <article>
            <div class="body">
              <%= govspeak_edition_to_html @document %>
            </div>
          </article>
        </div>
      </section>
    </div>
  </div>
</div>
