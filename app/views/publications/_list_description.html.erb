<ul class="publications documents-list">
  <% publications.each do |publication| %>
    <%= content_tag_for(:li, publication, class: 'document') do %>
      <h2><%= link_to publication.title, public_document_path(publication), title: "View #{publication.title}", class: "title" %></h2>
      <ul class="metadata">
        <li class="publication-date"><%= publication.display_date_microformat %></li>
        <li class="document-type"><%= t_display_type(publication) %></li>
      </ul>
    <% end %>
  <% end %>
</ul>
