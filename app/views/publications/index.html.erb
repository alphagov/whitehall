<% page_title "Publications" %>
<% page_class "publications-index" %>
<% atom_discovery_link_tag filter_atom_feed_url, "Recent publications" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header publication">
      <h1 class="page_title">Publications<% if @filter.selected_publication_filter_option %><span>: <%= @filter.selected_publication_filter_option.label %></span><% end %></h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <%= render partial: "documents/filter_form", locals: {
                                                   document_type: :publication,
                                                   filter_by_date: true,
                                                   filter_by_publication_type: true,
                                                   filter_by_relevant_to_local_government: true,
                                                   filter_by_locations: true
                                                 } %>
  </div>
</div>

<div class="block-4">
  <div class="inner-block">
    <%= render partial: "documents/filter_results", locals: { filter: @filter } %>

    <div class="filter-feed">
      <%= link_to_feed filter_atom_feed_url %>
    </div>

    <div class="filter-results js-filter-results" id="publications-container" aria-live="polite">
      <%= render_mustache('documents/filter_table', @filter.as_hash) %>
    </div>
  </div>
</div>
