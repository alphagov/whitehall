<% page_title "Publications" %>
<% page_class "publications-index" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header publication">
      <h1 class="page_title">Publications</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <div class="filter-block">
      <h2>Filter</h2>
      <%= form_tag publications_path, method: :get, id: "publications-filter" do %><%# this ID used by Javascript %>
        <fieldset>
          <legend class="visuallyhidden">Filter publications</legend>
          <div class="filter">
            <div class="filter-inner">
              <%= label_tag "departments", "Department", class: "visuallyhidden" %>
              <%= select_tag :departments, organisation_filter_options(@all_organisations, @selected_departments), size: 5, multiple: true, class: "multi-row-select" %>
            </div>
          </div>
          <div class="filter">
            <div class="filter-inner">
              <%= label_tag "topics", "Topic", class: "visuallyhidden" %>
              <%= select_tag :topics, topic_filter_options(@all_topics, @selected_topics), size: 5, multiple: true, class: "multi-row-select" %>
            </div>
          </div>
          <div class="filter">
            <div class="filter-inner">
              <%= label_tag "keywords", "Contains", class: 'title' %>
              <%= text_field_tag :keywords, @keywords, placeholder: "keywords" %>

              <div class="date-range">
                <h3>Published</h3>
                <% ['before', 'after'].each do |direction| %>
                  <%= label_tag "direction_#{direction}", class: 'checkbox'  do %>
                    <%= radio_button_tag :direction, direction, direction == @direction %>
                    <%= direction.humanize %>
                  <% end %>
                <% end %>
                <%= label_tag "date", "Date", class: "visuallyhidden" %>
                <%= select_tag :date, options_for_select(recent_month_filter_options(24, @date)), include_blank: false %>
              </div>
              <div class="submit">
                <%= submit_tag "Refresh", class: "button" %>
              </div>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>

<div class="block-4">
  <div class="inner-block" id="publications-container" aria-live="polite"><%# this ID used by Javascript %>
    <% if @publications.any? %>
      <table class="document-list" id="publications-list"><%# this ID used by Javascript %>
        <thead class="visuallyhidden">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Publication Date</th>
            <th scope="col">Publication Type</th>
          </tr>
        </thead>
        <tbody>
        <% @publications.each_with_index do |publication, i| %>
          <%= content_tag_for(:tr, publication, class: "document-row#{i < 3 ? ' recent' : ''}") do %>
            <th scope="row" class="title attribute">
              <%= link_to publication.title, public_document_path(publication),
                  title: "View #{publication.title}" %>
              <em class="meta organisation"><%= publication.organisations.map { |o|
                organisation_display_name(o) }.to_sentence.html_safe %></em>
            </th>
            <td class="date attribute">
              <%= render_datetime_microformat(publication, :publication_date) {
                    publication.publication_date.to_s(:long_ordinal)
              }%>
            </td>
            <td class="type attribute">
              <%= publication.publication_type.singular_name %>
            </td>
          <% end %>
        <% end %>
        </tbody>
      </table>
      <% if @next_page %>
        <nav id="show-more-publications" role="navigation">
          <ul class="previous-next-navigation">
            <li class="next"><%= link_to "Show more", url_for(params.merge(page: @next_page)) %></li>
          </ul>
        </nav>
      <% end %>
    <% else %>
      <div class="no-results">
        <h2>There are no matching publications.</h2>
        <p>Try making your search broader and try again.</p>
      </div>
    <% end %>
  </div>
</div>
