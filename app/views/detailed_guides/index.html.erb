<% page_title "Detailed guidance" %>
<% page_class "detailed-guides-index" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header detailed-guides">
      <h1 class="page_title">Detailed guidance from government</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <%= render partial: "documents/filter_form", locals: {document_type: :detailed_guide} %>
  </div>
</div>

<div class="block-4">
  <div class="inner-block filter-results" id="detailed-guides-container" aria-live="polite"><%# this class used by Javascript %>
    <% if @filter.documents.any? %>
      <table class="document-list" id="document-list"><%# this ID used by Javascript %>
        <thead class="visuallyhidden">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Topic</th>
          </tr>
        </thead>
        <tbody>
        <% @filter.documents.each do |detailed_guide| %>
          <%= content_tag_for(:tr, detailed_guide, class: "document-row") do %>
            <th scope="row" class="attribute title">
              <%= link_to detailed_guide.title, public_document_path(detailed_guide),
                  title: "View #{detailed_guide.title}" %>
            </th>
            <td class="attribute organisations">
              <%= detailed_guide.organisations.map { |o|
                organisation_display_name(o) }.to_sentence.html_safe %>
            </td>
            <td class="attribute topics">
              <%= detailed_guide.topics.map(&:name).join(", ").html_safe %>
            </td>
          <% end %>
        <% end %>
        </tbody>
      </table>
      <%= paginate @filter.documents %>
    <% else %>
      <div class="no-results">
        <h2>There are no matching detailed guides.</h2>
        <p>Try making your search broader and try again.</p>
      </div>
    <% end %>
  </div>
</div>
