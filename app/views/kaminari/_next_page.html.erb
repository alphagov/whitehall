<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% text = "Next page <span>#{current_page + 1} of #{num_pages}</span>".html_safe %>
<li class="next"><%= link_to_unless current_page.last?, text, url %>
<link rel="next" type="application/json" href="<%= filter_json_url(page: current_page + 1) %>">
</li>
