<% page_title "No longer available" %>
<% page_class "documents-unpublished" %>

<div class="block">
  <div class="inner-block holding-block">
    <h1>The page you are loooking for is no longer available</h1>

    <p class="summary">
      The information on this page has been removed because <%= @unpublishing.reason_as_sentence %>.
    </p>

    <div class="document body">
      <% if @unpublishing.explanation.present? %>
        <%= content_tag :p, @unpublishing.explanation %>
      <% end %>

      <% if @unpublishing.alternative_url.present? %>
        <p>Visit: <%= link_to @unpublishing.alternative_url %></p>
      <% end %>
    </div>
  </div>
</div>
