<%
  context = {
    result_count: result_count(filter.total_count),
    departments: filter_results_selections(filter.selected_organisations, 'departments'),
    topics: filter_results_selections(filter.selected_topics, 'topics'),
    keywords_any?: filter.keywords.any?,
    keywords: filter_results_keywords(filter.keywords),
    date: ({
      direction: filter.direction,
      date: filter.date.to_s(:short_ordinal)
    } if filter.date)
  }
%>
<div class="filter-results-summary">
  <h3 class="selections"><%= render_mustache('documents/filter_selections', context) %></h3>
</div>
