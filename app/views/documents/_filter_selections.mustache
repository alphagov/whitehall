<span class="count">{{result_count}}</span> <strong>{{pluralized_result_type}}</strong>
<span class="topics-selections">
  {{#topics}}
    about <strong>{{name}}</strong> <a href="{{url}}" data-field="topics" data-val="{{value}}" title="Remove {{name}} filter">&times;</a> {{joining}}
  {{/topics}}
</span>
<span class="departments-selections">
  {{#departments}}
    by <strong>{{name}}</strong> <a href="{{url}}" data-field="departments" data-val="{{value}}" title="Remove {{name}} filter">&times;</a> {{joining}}
  {{/departments}}
</span>
{{#world_locations_any?}}
from
<span class="locations-selections">
  {{#world_locations}}
    <strong>{{name}}</strong> <a href="{{url}}" data-field="world_locations" data-val="{{value}}" title="Remove {{name}} filter">&times;</a> {{joining}}
  {{/world_locations}}
</span>
{{/world_locations_any?}}

{{#keywords_any?}}
  containing
  <span class="keyword-selections">
    {{#keywords}}
      <strong>{{name}}</strong> <a href="{{url}}" data-field="keywords" data-val="{{name}}" title="Remove {{name}} filter">&times;</a> {{joining}}
    {{/keywords}}
  </span>
{{/keywords_any?}}

{{#relevant_to_local_government}}
  <span class="local-government-selections">
    <strong>relevant to local government</strong>
  </span>
{{/relevant_to_local_government}}

{{#filtering_command_and_act_papers?}}
  <span class="official-document-status">which are <strong>Command or Act papers <a data-field="official_document_status" data-val="command_and_act_papers" title="Remove official status filter">&times;</a></strong></span>
{{/filtering_command_and_act_papers?}}
{{#filtering_command_papers_only?}}
  <span class="official-document-status">which are <strong>Command papers <a data-field="official_document_status" data-val="command_papers_only" title="Remove official status filter">&times;</a></strong></span>
{{/filtering_command_papers_only?}}
{{#filtering_act_papers_only?}}
  <span class="official-document-status">which are <strong>Act papers <a data-field="official_document_status" data-val="act_papers_only" title="Remove official status filter">&times;</a></strong></span>
{{/filtering_act_papers_only?}}

{{#include_world_location_news}}
  <span class="world-location-news">
    <strong>including location-specific news</strong>
  </span>
{{/include_world_location_news}}

{{#date_from}}
published <strong>after&nbsp;{{date_from}}</strong>
{{/date_from}}

{{#date_to}}
published <strong>before&nbsp;{{date_to}}</strong>
{{/date_to}}
