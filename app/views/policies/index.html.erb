<% page_title "Policies" %>
<% page_class "policies-index" %>


<div class="block-1">
  <div class="inner-block">
    <header class="page-header policy">
      <h1 class="page_title"><%= t('policies.heading') %></h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <% if Locale.current.english? %>
      <%= render partial: "documents/filter_form", locals: {document_type: :policy, filter_by_keyword: true, filter_by_department: true, filter_by_topic: true} %>
    <% else %>
      <%= render partial: "documents/filter_form", locals: {document_type: :policy } %>
    <% end %>
  </div>
</div>

<div class="block-3">
  <div class="inner-block">
    <% if Locale.current.english? %>
      <%= render partial: "documents/filter_results", locals: { filter: @filter } %>
    <% end %>

    <div class="filter-results js-filter-results" aria-live="polite">
      <%= render_mustache('documents/filter_table', @filter.as_hash) %>
    </div>
  </div>
</div>
