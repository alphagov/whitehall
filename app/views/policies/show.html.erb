<% page_title @policy.title, "Policies" %>

<div class="document_page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
      <%= render partial: "document_metadata" %>
      <section class="page-header">
        <%= render partial: "title", locals: { document: @document } %>
      </section>
      <section class="meta-three<% unless @show_navigation %> no-navigation<% end %>">
        <%= render partial: "document_related", locals: {
          document: @document
        } %>
        <% if @show_navigation %>
          <%= render partial: "policy_navigation" %>
        <% end %>
    </section>
    </div>
  </div>
  <div class="block-2">
    <div class="inner-block">
      <%= render partial: "document_contextual" %>
      <%= national_statistics_logo(@document) %>
    </div>
  </div>
  <div class="block-3">
    <div class="inner-block">
      <%= render partial: "document_content" %>
      <% if @document.case_studies.any? %>
        <%= render partial: "case_studies", locals: {document: @document} %>
      <% end %>
    </div>
  </div>
  <div class="block-4">
    <div class="inner-block">
    </div>
  </div>
</div>
