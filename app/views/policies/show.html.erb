<% page_title @policy.title, "Policies" %>

<div class="document_page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
        <%= render  partial: "documents/header", locals: {
                    document: @document,
                    header_title: 'Policy',
                    topics: @document.topics } %>
      <section class="meta-three<% unless @show_navigation %> no-navigation<% end %>">
        <% if @show_navigation %>
          <%= render partial: "policy_navigation" %>
        <% end %>
      </section>
    </div>
  </div>
  <div class="block-2">
    <div class="inner-block">
      <%= render partial: "document_contextual" %>
      <%= national_statistics_logo(@document) %>
    </div>
  </div>
  <div class="block-3">
    <div class="inner-block">
      <%= render partial: "document_content" %>
      <% if @document.case_studies.any? %>
        <%= render partial: "case_studies/case_studies", locals: {case_studies: @document.case_studies} %>
      <% end %>
    </div>
  </div>
</div>
