<table class="document-list">
  <thead class="visuallyhidden">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Published date</th>
      <th scope="col">Meta data</th>
    </tr>
  </thead>
  <tbody>
  <% recently_updated.each do |document| %>
    <%= content_tag_for :tr, document, :recent, class: [edition_organisation_class(document), 'document-row'].join(" ") do %>
      <th scope="row" class="Title"><%= link_to document.title, public_document_path(document), class: "title" %></th>
      <td class="published-date">
        <%= published_or_updated(document) %>
        <%= relative_time(document.timestamp_for_sorting, class: 'published-at') %>
      </td>
      <td class="metadata"><span class="document_type type"><%= document.format_name.capitalize %></span></td>
    <% end %>
  <% end %>
  </tbody>
</table>
