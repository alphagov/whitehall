<% page_title "UK and the world" %>
<% page_class "countries-index" %>

<div class="countries_index_page">
  <div class="block-1">
    <div class="inner-block">
      <header class="page-header countries">
        <h1 class="page_title">UK and the world</h1>
        <p class="explanation">The UK government&rsquo;s priorities and interests overseas</p>
      </header>
    </div>
  </div>

  <% if @featured_country %>
  <div class="block-2">
    <div class="inner-block">
      <%= content_tag_for(:div, @featured_country, class: 'featured') do %>
        <%= image_tag 'spain.png', alt: 'Country image - Spain' %>
        <h2><%= link_to @featured_country.name, country_path(@featured_country), class: "name" %></h2>
        <p class="summary description">
          <%= @featured_country.description %>
        </p>
      <% end %>
    </div>
  </div>
  <% end %>


  <div class="block-3">
    <div class="inner-block">
      <section class="simple-alphabetical-list" id="countries">
        <h1 class="label">All countries, territories &amp; delegations</h1>
        <% @countries.group_by {|c| c.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
          <% row.each do |letter, countries_group| %>
            <div class="alphabetical-row" id="countries_<%= letter.downcase %>">
              <h2 class="alphabetical-list-letter"><%= letter %></h2>
              <%= render partial: "list", locals: { countries: countries_group } %>
            </div>
          <% end %>
        <% end %>
      </section>
    </div>
  </div>
</div>
