<article class="document has_notice">
  <div class="body">
    <%= govspeak_to_html @document.body, @document.images %>
  </div>
  <%= render partial: "attachments", locals: { object_with_attachments: @document } %>
</article>

<section class="contextual-info">
  <h1>Original consultation</h1>

  <%= content_tag_for(:div, @document.consultation) do %>
    <%= link_to @document.consultation.title, public_document_path(@document.consultation) %>
    <div class="closing_on"><%= consultation_closing_phrase(@document.consultation) %></div>

  <% end %>
</section>
