<% page_title "Ministers" %>
<% page_class "ministers-index" %>

<div class="header-block">
  <div class="inner-block">
    <header class="page-header minister">
      <div class="header-title">
        <div class="content">
          <h1>Ministers</h1>
        </div>
      </div>

      <aside class="jump-links">
        <div class="content">
          <h4>Sections:</h4>
          <ul>
            <li><a href="#cabinet-ministers">Cabinet ministers</a></li>
            <li><a href="#ministers-by-organisation">Ministers by organisation</a></li>
            <li><a href="#whips">Whips</a></li>
          </ul>
        </div>
      </aside>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <section class="cab_ministers">
      <h2 class="label" id="cabinet-ministers">Cabinet ministers</h2>
      <ul id="cabinet" class="cabinet_list">
        <% @cabinet_ministerial_roles.each_with_index do |(person, roles), i| %>
          <%= render partial: "people/person",
              locals: {
                person: person,
                roles: roles,
                hlevel: "h3",
                hide_image: false,
                extra_class: (i % 4 == 0) ? 'clear-person' : ''
          } %>
        <% end %>
      </ul>
    </section>
  </div>
</div>

<div class="ministers-by-organisation">
  <div class="inner-block">
    <h2 id="ministers-by-organisation">Ministers by organisation</h2>
    <% @ministers_by_organisation.each do |organisation, ministers| %>
      <%= content_tag_for :section, organisation do %>
        <h3>
          <%= link_to organisation_path(organisation), class: logo_classes(class_name: organisation.organisation_logo_type.class_name,  size: 'medium', stacked: true) do %>
            <span><%= format_with_html_line_breaks(organisation.logo_formatted_name) %></span>
          <% end %>
        </h3>
        <ul class="minister-list">
          <% ministers.each.with_index do |role_appointment, i| %>
            <%= render partial: "people/person",
                locals: {
                  person: role_appointment.person,
                  roles: [role_appointment.role],
                  hlevel: "h4",
                  prefix: 'by-organisation',
                  hide_image: true,
                  extra_class: (i % 3 == 0) ? 'clear-person' : ''
                } %>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>

<div class="ministers-by-organisation whips">
  <div class="inner-block">
    <h2 id="whips">Whips</h2>

    <% @whips_by_organisation.each do |whip_organisation, whips| %>
      <%= content_tag_for :section, whip_organisation do %>
        <h3><%= whip_organisation.name %></h3>
        <ul class="minister-list">
          <% whips.each.with_index do |role_appointment, i| %>
            <%= render partial: "people/person",
                locals: {
                  person: role_appointment.person,
                  roles: [role_appointment.role],
                  hlevel: "h4",
                  prefix: 'by-organisation',
                  hide_image: true,
                  extra_class: (i % 3 == 0) ? 'clear-person' : ''
                } %>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
