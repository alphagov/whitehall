<% page_title "Announcements" %>
<% page_class "announcements-index" %>
<% atom_discovery_link_tag filter_atom_feed_url, "Recent announcements" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header announcements icon">
      <h1 class="page_title"><%= h "Announcements" %><% if @filter.selected_announcement_type_option %><span>: <%= @filter.selected_announcement_type_option.label %></span><% end %></h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <%= render partial: "documents/filter_form", locals: {
                                                  document_type: :announcement,
                                                  filter_by_date: true,
                                                  filter_by_announcement_type: true,
                                                  filter_by_locations: true,
                                                  filter_by_relevant_to_local_government: true
                                                } %>
  </div>
</div>

<div class="block-4">
  <div class="inner-block">
    <%= render partial: "documents/filter_results", locals: { filter: @filter } %>

    <div class="filter-feed">
      <%= link_to_feed filter_atom_feed_url %>
    </div>

    <div class="filter-results js-filter-results" id="announcements-container" aria-live="polite">
      <%= render_mustache('documents/filter_table', @filter.as_hash) %>
    </div>
  </div>
</div>
