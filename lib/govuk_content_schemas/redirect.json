{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "base_path",
    "format",
    "publishing_app",
    "update_type",
    "locale",
    "redirects"
  ],
  "properties": {
    "base_path": {
      "type": "string"
    },
    "format": {
      "enum": [ "redirect" ]
    },
    "public_updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "publishing_app": {
      "type": "string"
    },
    "rendering_app": {
      "type": "string"
    },
    "update_type": {
      "enum": [ "major", "minor", "republish" ]
    },
    "locale": {
      "type": "String"
    },
    "redirects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "type",
          "destination"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "enum": [ "prefix", "exact" ]
          },
          "destination": {
            "type": "string"
          }
        }
      }
    }
  }
}
