<% content_for :context, context %>
<% content_for :title, @title %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", {
    href: @back_path,
  } %>
<% end %>

<% if @content_block_edition.scheduled? %>
  <%= render "govuk_publishing_components/components/warning_text", {
    text: "There is currently a change scheduled for this content block. If you continue, the scheduled update will be cancelled.",
  } %>
<% end %>

<%= render partial: "content_block_manager/content_block/shared/form", locals: { form: @form } %>
